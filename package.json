{
  "name": "quick-start-react-app",
  "version": "0.1.0",
  "description": "This is a basic Webpack configuration to get started quickly to create web applications with React.",
  "main": "server.js",
  "scripts": {
    "build": "npm run clean && webpack --watch --config webpack.dev.js",
    "buildpro": "npm run clean && webpack -p --config webpack.prod.js",
    "buildserver": "webpack-dev-server --open --config webpack.dev.js",
    "start": "npm run buildpro && NODE_ENV=production node server.js",
    "clean": "rimraf ./dist"
  },
  "author": "Armando Alejandre <armando1339@gmail.com> (https://github.com/armando1339/)",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "webpack-dev-server": "^2.8.2"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "express": "^4.15.5",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.5.3",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.6.0"
  }
}
